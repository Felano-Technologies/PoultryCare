{
    "version": 2,
    "builds": [
      {
        "src": "api/backend.js",  
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/dist" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/backend.js" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
  }
  